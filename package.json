{
  "name": "orange-dragonfly-validator",
  "version": "0.9.0",
  "description": "Library for input parameters validation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charger88/orange-dragonfly-validator.git"
  },
  "scripts": {
    "example": "npx tsx examples/example.ts",
    "example:builder": "npx tsx examples/builder-example.ts",
    "example:readme": "npx tsx examples/readme-example.ts",
    "generate-docs": "npx tsx generate-docs.ts",
    "build": "tsup",
    "test": "jest",
    "benchmark": "npx tsx tests/benchmark/run.ts",
    "eslint": "eslint ./src",
    "eslint:fix": "eslint --fix ./src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "validation",
    "parameters",
    "nodejs",
    "validator"
  ],
  "author": {
    "name": "Mike Kelner",
    "email": "mikhail.kelner@gmail.com",
    "url": "https://www.michaelkelner.com/"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charger88/orange-dragonfly-validator/issues"
  },
  "homepage": "https://github.com/charger88/orange-dragonfly-validator#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
